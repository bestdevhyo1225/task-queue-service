{
    "extends": [
        "tslint-config-standard"
    ],
    "rules": {
        "space-before-function-paren": false,
        "semicolon": [
            true,
            "always",
            "ignore-bound-class-methods"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": {
                    "type": "string",
                    "enum": [
                      "nospace",
                      "onespace",
                      "space"
                    ]
                },
                "index-signature": {
                    "type": "string",
                    "enum": [
                      "nospace",
                      "onespace",
                      "space"
                    ]
                },
                "parameter": {
                    "type": "string",
                    "enum": [
                      "nospace",
                      "onespace",
                      "space"
                    ]
                },
                "property-declaration": {
                    "type": "string",
                    "enum": [
                      "nospace",
                      "onespace",
                      "space"
                    ]
                },
                "variable-declaration": {
                    "type": "string",
                    "enum": [
                      "nospace",
                      "onespace",
                      "space"
                    ]
                },
                "properties": {
                    "type": "string",
                    "enum": [
                      "nospace",
                      "onespace",
                      "space"
                    ]
                }
            }
        ],
        "ter-indent": [
            true,
            4
        ],
        "no-trailing-whitespace": [ true, "ignore-template-strings" ],
        "object-literal-key-quotes": [true, "consistent-as-needed"],
        "quotemark": false,
        "no-consecutive-blank-lines": false,
        "comment-format": false,
        "strict-type-predicates": false,
        "no-unnecessary-type-assertion": false
    }
}